                    </li>
                    <li id="accounts">
                        <a asp-area="Admin" asp-controller="Account" asp-action="List"><i class=" fa fa-fw fa-users"></i> Accounts</a>
                    </li>
                    <li id="posts">
                        <a asp-area="Admin" asp-controller="Post" asp-action="List"><i class=" fa fa-fw fa-edit"></i> Posts</a>
